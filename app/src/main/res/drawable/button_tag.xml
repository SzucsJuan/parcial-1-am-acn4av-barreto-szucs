    <corners
        android:radius="140dp"/>

    <gradient
        android:centerX="0.5"
        android:centerY="0.5"
        android:endColor="@color/white"
        android:gradientRadius="90dp"
        android:startColor="@color/white"
        android:type="linear"/>

    <stroke
        android:width="8dp"
        android:color="@color/white"/>

    <solid
        android:color="@color/white"/>

    <!-- Corregir el padding con texto -->
